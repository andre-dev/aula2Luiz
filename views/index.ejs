<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <p> <%= clientes.length %> Clientes Cadastrados!! </p>

    <table>
      <thead>
        <tr>
          <td>Nome</td>
          <td>Idade</td>
          <td>Cidade</td>
          <td>Ações</td>
        </tr>
      </thead>
      <tbody>
        <% 
        clientes.forEach(item => {
          %>
            <tr>
              <td><a href="/edit/<%= item._id  %>" title="Editar"><%= item.nome  %></a></td>
              <td><%= item.idade  %></td>
              <td><%= item.cidade  %></td>
              <td>
                <a href="/edit/<%= item._id  %>"><img src="/images/edit.png" title="Editar"></a>
                <a href="/delete/<%= item._id  %>"><img src="/images/delete.png" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir o usuário: <%= item.nome %> ?')"></a>
              </td>
            </tr>
          <%
        })
      %>
      </tbody>
      <!-- <tfoot></tfoot> -->
    </table>

    <hr>

    <a href="/new"> Cadastrar Novo</a>
    
  </body>
</html>
